<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activitys.ChatActivity">


    <View
        android:id="@+id/chat_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/top_bar_normal_bg"/>


    <ListView
        android:id="@+id/chat_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#aaffffff"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/chatting_setmode_voice_normal"/>

            <EditText
                android:background="@null"
                android:id="@+id/chat_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>

            <ImageView
                android:layout_marginTop="4dp"
                android:id="@+id/chat_btn_emoj"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/chatting_biaoqing_normal"/>

            <ImageView
                android:layout_marginTop="4dp"
                android:id="@+id/chat_more"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/type_select_nor"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/buttom_layout_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/btn_answer_normal"
            android:orientation="horizontal"
            android:visibility="gone">


            <!-- 填充表情 -->

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <!-- 填充加号 -->

            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <!--- 写表情的布局-->


        </LinearLayout>


    </LinearLayout>


</LinearLayout>