<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwie.test.chatdemo.activitys.UserInfoActivity"
    >


    <com.github.florent37.arclayout.ArcLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="5dp"
        app:arc_cropDirection="cropOutside"
        app:arc_height="50dp"
        >


        <ImageView
            android:id="@+id/userinfo_face"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />


    </com.github.florent37.arclayout.ArcLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/userinfo_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"

            android:textColor="@color/colorAccent"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/userinfo_relation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"


            android:textColor="@color/main_red_text"
            android:textSize="14sp"
            />


    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/userinfo_rv"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:padding="8dp"/>


        <TextView
            android:id="@+id/userinfo_diqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userinfo_rv"
            android:layout_marginLeft="@dimen/padding_20dp"
            android:layout_marginTop="30dp"
            android:background="@color/title_bg"
            />

        <TextView
            android:id="@+id/userinfo_sexy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userinfo_diqu"
            android:layout_marginLeft="@dimen/padding_20dp"
            android:layout_marginTop="@dimen/padding_20dp"
            android:background="@color/title_bg"
            />
        <TextView
            android:id="@+id/userinfo_jianjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userinfo_sexy"
            android:layout_marginLeft="@dimen/padding_20dp"
            android:layout_marginTop="@dimen/padding_20dp"
            android:background="@color/title_bg"
            />
        <TextView
            android:id="@+id/userinfo_lasttiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userinfo_jianjie"
            android:layout_marginLeft="@dimen/padding_20dp"
            android:layout_marginTop="@dimen/padding_20dp"
            android:background="@color/title_bg"
            />


    </RelativeLayout>

<LinearLayout
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <Button

        android:id="@+id/btn_addfriend"
       android:background="@drawable/buttonshape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打招呼"/>
    <Button
        android:visibility="invisible"
        android:id="@+id/btn_sendmsgtofriend"
        android:background="@drawable/buttonshape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送消息"/>

</LinearLayout>


</LinearLayout>
